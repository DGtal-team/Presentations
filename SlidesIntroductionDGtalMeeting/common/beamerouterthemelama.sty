%%% footline

\defbeamertemplate*{footline}{lama footline}
{
%  \leavevmode%
  \begin{tikzpicture}[rounded corners=3pt, overlay, remember picture]
    \usebeamercolor[bg]{author in head/foot}
    \draw[draw=none,fill=bg](0,0)--(0,0.5)--(\paperwidth,0.5)--(\paperwidth,0);
    \usebeamercolor[fg]{author in head/foot}
    \draw[text=fg](0.5,0.25)node[anchor=west]{\insertshortauthor};
    \usebeamercolor[fg]{title in head/foot}
    \draw[text=fg](4,0.25)node[anchor=west]{\insertshorttitle};
    \usebeamercolor[fg]{date in head/foot}
    \draw[text=fg](\paperwidth-0.5cm,0.25)node[anchor=east]{\insertframenumber{}/\inserttotalframenumber{}};
  
  \end{tikzpicture}
}

\setbeamertemplate{footline}[lama footline]


%%% Headline

\defbeamertemplate*{headline}{lama headline}
{
  \begin{tikzpicture}[remember picture, overlay]
    \usebeamercolor[bg]{section in head/foot}
    \begin{scope}[yshift=-0.4cm]
    \draw[fill=bg, draw=none] (0,-8pt)..controls (0,0) and (0,0)..(8pt,0) -- 
    (\paperwidth-8pt,0)..controls (\paperwidth,0) and (\paperwidth,0)..(\paperwidth,-8pt) --
    (\paperwidth,0.4cm)--(0,0.4cm)--cycle;
    \end{scope}

    \draw(0,0)node[anchor=north west]{\insertnavigation{\paperwidth}};
  \end{tikzpicture}
}

